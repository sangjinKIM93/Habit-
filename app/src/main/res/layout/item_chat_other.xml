<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:id="@+id/item_chat_other"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/iv_chatProfile"
        android:layout_gravity="center_horizontal"
        app:civ_border_color="@color/darkGray"
        app:civ_border_width="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:paddingRight="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:id="@+id/tv_chatName"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/tv_chatContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="resolutionresolutionresolutionresolutionresolutionresolutionresolutionresolutionresolutionresolutionresolutionresolutionresolutionresolution"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginRight="70dp"
            android:background="@drawable/incoming_bubble"
            android:paddingLeft="25dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            />

        <ImageView
            android:id="@+id/iv_imageUpload"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/incoming_bubble"
            android:paddingLeft="25dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:visibility="gone"/>
    </LinearLayout>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:custom="http://schemas.android.com/tools"
    android:background="@drawable/edge"
    android:layout_marginBottom="5dp"
    android:elevation="5dp">

    <TextView
        android:id="@+id/tv_habitName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="습관명"
        android:gravity="center"
        android:textSize="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/bar_progress"
        app:layout_constraintRight_toRightOf="@+id/bar_progress"
        app:layout_constraintVertical_bias="0.065"
        android:textStyle="bold"
         />

    <ProgressBar
        android:id="@+id/bar_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:progress="0"
        android:progressDrawable="@drawable/progressbar_style"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.53"
        app:layout_constraintHorizontal_bias="0.1"
         />

    <TextView
        android:id="@+id/dalsung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="달성일 :"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/bar_progress"
        app:layout_constraintRight_toLeftOf="@+id/tv_dayAchieved"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_chainStyle="packed"
         />

    <TextView
        android:id="@+id/tv_dayAchieved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dalsung"
        app:layout_constraintRight_toLeftOf="@+id/dalsung2"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_chainStyle="packed"
        />
    <TextView
        android:id="@+id/dalsung2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="목표일수 :"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_dayAchieved"
        app:layout_constraintRight_toLeftOf="@+id/tv_goal"
        app:layout_constraintVertical_bias="0.9"
        />
    <TextView
        android:id="@+id/tv_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dalsung2"
        app:layout_constraintRight_toRightOf="@id/bar_progress"
        app:layout_constraintVertical_bias="0.9"
        />

